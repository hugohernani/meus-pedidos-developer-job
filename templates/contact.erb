<div class="contact_container container">
  <div class="text-center">
    <% if flash[:error] %>
      <h2 class="text-warning"><%= flash[:notice] %></h2>
    <% else %>
      <h2 class="text-primary"><%= flash[:notice] %></h2>
    <% end %>
  </div>

  <form role="form" action="/contact" method="post" autocomplete="on">
    <fieldset class="row">
      <div class="form-group col-xs-12 col-md-6 has-success has-feedback">
        <div class="input-group">
          <span class="input-group-addon">Name:</span>
          <label class="sr-only" for="name">Nome:</label>
          <input type="name" class="form-control input-lg" id="name" name="name"
                  placeholder="Digite seu nome" required autofocus>
        </div>
      </div>
      <div class="form-group col-xs-12 col-md-6 has-success has-feedback">
        <div class="input-group">
          <span class="input-group-addon">Email:</span>
          <label class="sr-only" for="email">Email:</label>
          <input type="email" class="form-control input-lg" id="email"
              name="email" placeholder="Digite seu email" required>
        </div>
      </div>
    </fieldset>
    <fieldset>
      <section>
        <h3 class="text-center">O quanto vocÃª sabe sobre</h3>
        <div class="row knowledgments">
          <div class="form-group form-group-lg col-sm-4">
            <div class="input-group">
              <span class="input-group-addon">HTML</span>
              <input type="range" class="form-control" name="html" id="html_range" value="0"
                      min="0" max="10" onchange="html_out.value=value">
              <output id="html_out" class="input-group-addon">0</output>
            </div>
          </div>
          <div class="form-group form-group-lg col-sm-4">
            <div class="input-group">
              <span class="input-group-addon">CSS</span>
              <input type="range" class="form-control" name="css" id="css_range" value="0"
                      min="0" max="10" onchange="css_out.value=value">
              <output id="css_out" class="input-group-addon">0</output>
            </div>
          </div>
          <div class="form-group form-group-lg col-sm-4">
            <div class="input-group">
              <span class="input-group-addon">Javascript</span>
              <input type="range" class="form-control" name="javascript" id="javascript_range" value="0"
                      min="0" max="10" onchange="javascript_out.value=value">
              <output id="javascript_out" class="input-group-addon">0</output>
            </div>
          </div>
          <div class="form-group form-group-lg col-sm-6">
            <div class="input-group">
              <span class="input-group-addon">Python</span>
              <input type="range" class="form-control" name="python" id="python_range" value="0"
                      min="0" max="10" onchange="python_out.value=value">
              <output id="python_out" class="input-group-addon">0</output>
            </div>
          </div>
          <div class="form-group form-group-lg col-sm-6">
            <div class="input-group">
              <span class="input-group-addon">Django</span>
              <input type="range" class="form-control" name="django" id="django_range" value="0"
                      min="0" max="10" onchange="django_out.value=value">
              <output id="django_out" class="input-group-addon">0</output>
            </div>
          </div>
          <div class="form-group form-group-lg col-sm-6">
            <div class="input-group">
              <span class="input-group-addon">Ios</span>
              <input type="range" class="form-control" name="ios" id="ios_range" value="0"
                      min="0" max="10" onchange="ios_out.value=value">
              <output id="ios_out" class="input-group-addon">0</output>
            </div>
          </div>
          <div class="form-group form-group-lg col-sm-6">
            <div class="input-group">
              <span class="input-group-addon">Android</span>
              <input type="range" class="form-control" name="android" id="android_range" value="0"
                      min="0" max="10" onchange="android_out.value=value">
              <output id="android_out" class="input-group-addon">0</output>
            </div>
          </div>
        </div>
      </section>
    </fieldset>
    <div id="submit_btn_container" class="form-group text-center">
      <button type="submit" class="btn btn-default btn-primary btn-xlg">Enviar</button>
    </div>
  </form>

</div>
